#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define LOWER 1
#define RAISE 2
#define ADJUST 3
#define GAME 4

&lt {
    flavor = "tap-preferred";
    quick-tap-ms = <200>;
};
/ {
    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <1 2>;
            then-layer = <3>;
        };
    };
    behaviors {
        hm: homerow_mods {
            compatible = "zmk,behavior-hold-tap";
            label = "HOMEROW_MODS";
            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };
    keymap {
        compatible = "zmk,keymap";

        default_layer {
// ------------------------------------------------------------------------------------------------------------
//                     |     |  1  |  2  |  3  |  4  |  5  |                 |  6  |  7  |  8   |  9  |  0  |     |
//                     |     |  Q  |  W  |  F  |  P  |  B  |                 |  J  |  L  |  U   |  Z  |  ;  |     |
//                     |     |  A  |  R  |  S  |  T  |  G  |                 |  M  |  N  |  E   |  I  |  O  |     |
//                     |     |  Y  |  X  |  C  |  D  |  V  | MUT |     |     |  K  |  H  |  ,   |  .  |  /  |     |
//                                 | ___ | ALT | TAB | SPC | SFT |     | CTL | BSP | ENT | RALT | ___ |
            bindings = <
&none  &kp N1     &kp N2     &kp N3      &kp N4        &kp N5                                          &kp N6         &kp N7         &kp N8      &kp N9     &kp N0     &none
&none  &kp Q      &kp W      &kp F       &kp P         &kp B                                           &kp J          &kp L          &kp U       &kp Z      &kp SEMI   &none
&none  &hm LGUI A &hm LALT R &hm LCTRL S &hm LSHFT T   &kp G                                           &kp M          &hm LSHFT N    &hm LCTRL E &hm RALT I &hm LGUI O &none
&none  &kp Y      &kp X      &kp C       &kp D         &kp V           &none            &none          &kp K          &kp H          &kp COMMA   &kp DOT    &kp FSLH   &none
                  &none      &kp LALT    &hm LCTRL TAB &lt RAISE SPACE &hm LSHFT SPACE  &hm LSHFT BSPC &lt LOWER BSPC &hm LCTRL RET  &kp RALT    &none
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        lower_layer {
// TODO: Some binds are waiting for shifted keycode support.
// ------------------------------------------------------------------------------------------------------------
//                     |     |     |     |     |     |     |                 |     |     |     |     |     |     |
//                     |     |  !  |  @  |  #  |  $  |  %  |                 |  ^  |  &  |  *  |  (  |  )  |     |
//                     |     | ESC |  `  |  [  |  ]  |  +  |                 |  |  |  -  |  =  |  _  |     |     |
//                     |     | TAB |  Â°  |  {  |  }  |  ~  |     |     |     |     |  '  |  "  |     |  \  |     |
//                                 |     |     |     |     |     |     |     |     |     |     |     |
            bindings = <
&trans  &trans     &trans           &trans     &trans     &trans                     &trans     &trans     &trans     &trans     &trans     &trans
&trans  &kp LS(N1) &kp LS(N2)       &kp LS(N3) &kp LS(N4) &kp LS(N5)                 &kp LS(N6) &kp LS(N7) &kp LS(N8) &kp LS(N9) &kp LS(N0) &trans
&trans  &kp ESC    &kp GRAVE        &kp LBKT   &kp RBKT   &kp PLUS                   &kp PIPE   &kp MINUS  &kp EQUAL  &kp UNDER  &kp RA(N5) &trans
&trans  &kp TAB    &kp LS(RA(SEMI)) &kp LBRC   &kp RBRC   &kp TILDE  &trans   &trans &trans     &kp SQT    &kp DQT    &trans     &kp BSLH   &trans
                   &trans           &trans     &trans     &trans     &trans   &trans &trans     &trans     &trans     &trans
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        raise_layer {
// ------------------------------------------------------------------------------------------------------------
//                     |     |     |     |     |     |     |                |     |     |     |     |     |     |
//                     |     |     | WOR |     |     | WOB |                |  v  |  <  |  7  |  8  |  9  |     |
//                     |     | ESC |     | PGD | BSW | DEW |                |     |  0  |  4  |  5  |  6  |     |
//                     |     | TAB | HOM | PGU | END | DEL |      |  |      |  ^  |  >  |  1  |  2  |  3  |     |
//                                 |     |     |     |     |      |  |      |     |     |     |     |
            bindings = <
&trans  &trans   &trans        &trans     &trans    &trans                        &trans    &trans    &trans  &trans &trans  &trans
&trans  &trans   &kp LC(RIGHT) &trans     &trans    &kp LC(LEFT)                  &kp DOWN  &kp RIGHT &kp N7  &kp N8 &kp N9  &trans
&trans  &kp ESC  &trans        &kp PG_UP  &kp LC(W) &kp LC(DEL)                   &trans    &kp N0    &kp N4  &kp N5 &kp N6  &trans
&trans  &kp TAB  &kp HOME      &kp PG_DN  &kp END   &kp DEL       &trans  &trans  &kp UP    &kp LEFT  &kp N1  &kp N2 &kp N3  &trans
                 &trans        &trans     &trans    &trans        &trans  &trans  &trans    &trans    &trans  &trans
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        adjust_layer {
// ------------------------------------------------------------------------------------------------------------
//                     |     |     |     |     |     |     |                |     |     |     |     |     |     |
//                     |     | F1  | F2  | F3  | F4  | F5  |                | F6  | F7  | F8  | F9  | F10 |     |
//                     |     | F11 | btc |manja|noteb|bt/us|                | V+  |ipad |one+ |     | F12 |     |
//                     |     |     |     |     |     |     |      |  |      | V-  |     |     |     | LTG |     |
//                                 |     |     |     |     |      |  |      |     |     |     |     |
            bindings = <
&trans  &trans   &trans      &trans       &trans       &trans                      &trans        &trans       &trans       &trans  &trans     &trans
&trans  &kp F1   &kp F2      &kp F3       &kp F4       &kp F5                      &kp F6        &kp F7       &kp F8       &kp F9  &kp F10    &trans
&trans  &kp F11  &bt BT_CLR  &bt BT_SEL 0 &bt BT_SEL 1 &out OUT_TOG                &kp K_VOL_UP  &bt BT_SEL 2 &bt BT_SEL 3 &trans  &kp F12    &trans
&trans  &trans   &trans      &trans       &trans       &trans       &trans &trans  &kp K_VOL_DN  &trans       &trans       &trans  &tog GAME  &trans
                 &trans      &trans       &trans       &trans       &trans &trans  &trans        &trans       &trans       &trans
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };

        game {
// ------------------------------------------------------------------------------------------------------------
//               |     | `   |  1  |  2  |  3  |  4  |                |  5  |  6  |  7  |  8  |  9  |     |
//               |     | TAB |  Q  |  W  |  E  |  R  |                |  P  |  L  |  G  |     |     |     |
//               |     | LSH |  A  |  S  |  D  |  F  |                |  I  |  V+ |     |     |     |     |
//               |     | CTL |  Y  |  X  |  C  |  V  |      |  |      |  M  |  V- |     |     | LTG |     |
//                           |     |     |     |     |      |  |      |     |     |     |     |
//             bindings = <
// &none  &kp GRAVE  &kp 1    &kp 2    &kp 3    &kp 4                       &kp 5   &kp 6          &kp 7  &kp 8  &kp 9      &none
// &none  &kp TAB    &kp Q    &kp W    &kp E    &kp R                       &kp P   &kp L          &kp G  &none  &none      &none
// &none  &kp LSFT   &kp A    &kp S    &kp D    &kp F                       &kp I   &kp K_VOL_UP   &none  &none  &none      &none
// &none  &kp LCTL   &kp Y    &kp X    &kp C    &kp V   &none       &none   &kp M   &kp K_VOL_DOWN &none  &none  &tog GAME  &none
//                   &none    &none    &kp BSPC &kp SPC &kp ENT     &none   &none   &none          &none  &none
//             >;

            bindings = <
&trans  &trans   &trans      &trans       &trans       &trans                      &trans        &trans       &trans       &trans  &trans     &trans
&trans  &kp F1   &kp F2      &kp F3       &kp F4       &kp F5                      &kp F6        &kp F7       &kp F8       &kp F9  &kp F10    &trans
&trans  &kp F11  &bt BT_CLR  &bt BT_SEL 0 &bt BT_SEL 1 &out OUT_TOG                &kp K_VOL_UP  &bt BT_SEL 2 &bt BT_SEL 3 &trans  &kp F12    &trans
&trans  &trans   &trans      &trans       &trans       &trans       &trans &trans  &kp K_VOL_DN  &trans       &trans       &trans  &tog GAME  &trans
                 &trans      &trans       &trans       &trans       &trans &trans  &trans        &trans       &trans       &trans
            >;

            sensor-bindings = <&inc_dec_kp PG_UP PG_DN &inc_dec_kp C_VOL_UP C_VOL_DN>;
        };
    };
};
